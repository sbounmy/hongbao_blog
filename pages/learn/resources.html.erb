<!-- AI Assistant Modal -->
<dialog id="bitcoin_assistant_modal" class="modal">
  <div class="modal-box max-w-2xl h-[80vh] flex flex-col">
    <h3 class="font-bold text-lg mb-4">Bitcoin Assistant</h3>
    
    <!-- Chat Container -->
    <div class="flex-1 overflow-y-auto mb-4 space-y-4" id="chat-messages">
      <div class="chat chat-start">
        <div class="chat-bubble chat-bubble-primary">
          üëã Hi! I'm here to help you understand Bitcoin. What would you like to know?
        </div>
      </div>
    </div>
    
    <!-- Quick Questions -->
    <div class="grid grid-cols-2 gap-2 mb-4">
      <button class="btn btn-sm btn-outline" onclick="sendMessage('What is Bitcoin mining?')">
        What is Bitcoin mining?
      </button>
      <button class="btn btn-sm btn-outline" onclick="sendMessage('How do I buy Bitcoin?')">
        How do I buy Bitcoin?
      </button>
      <button class="btn btn-sm btn-outline" onclick="sendMessage('What is a blockchain?')">
        What is a blockchain?
      </button>
      <button class="btn btn-sm btn-outline" onclick="sendMessage('Is Bitcoin legal?')">
        Is Bitcoin legal?
      </button>
    </div>
    
    <!-- Input Form -->
    <form class="flex gap-2" onsubmit="event.preventDefault(); sendMessage(this.message.value); this.reset();">
      <input type="text" name="message" placeholder="Ask anything about Bitcoin..." class="input input-bordered flex-1" required>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>
    
    <div class="modal-action mt-4">
      <form method="dialog">
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<script>
  function sendMessage(message) {
    // Placeholder implementation
    const chatContainer = document.getElementById('chat-messages');
    
    // Add user message
    chatContainer.innerHTML += `
      <div class="chat chat-end">
        <div class="chat-bubble">${message}</div>
      </div>
    `;
    
    // Add AI response (placeholder)
    setTimeout(() => {
      let response = "Great question! ";
      if (message.toLowerCase().includes('mining')) {
        response += "Bitcoin mining is the process of validating transactions and adding them to the blockchain...";
      } else if (message.toLowerCase().includes('buy')) {
        response += "You can buy Bitcoin through exchanges like Coinbase, Kraken, or peer-to-peer platforms...";
      } else {
        response += "Bitcoin is a decentralized digital currency that operates without a central authority...";
      }
      
      chatContainer.innerHTML += `
        <div class="chat chat-start">
          <div class="chat-bubble chat-bubble-primary">${response}</div>
        </div>
      `;
      
      chatContainer.scrollTop = chatContainer.scrollHeight;
    }, 500);
  }
</script>