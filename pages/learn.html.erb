<script>
  function askQuestion(question) {
    // Placeholder for chat functionality
    alert(`Answer for: "${question}" would appear here`);
  }

  // Trigger confetti on page load with localStorage check
  window.addEventListener('DOMContentLoaded', () => {
    const CONFETTI_KEY = 'hongbao_confetti_shown';
    const ONE_MONTH = 30 * 24 * 60 * 60 * 1000; // 30 days in milliseconds

    const lastShown = localStorage.getItem(CONFETTI_KEY);
    const now = Date.now();

    // Check if we should show confetti
    if (!lastShown || (now - parseInt(lastShown)) > ONE_MONTH) {
      setTimeout(() => {
        document.getElementById('confetti-trigger').click();
        // Store the current timestamp
        localStorage.setItem(CONFETTI_KEY, now.toString());
      }, 100);
    }
  });
</script>