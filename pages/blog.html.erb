---
title: Hongbao Blog
posts: 10
primary_page:
  title: Home
  order: 1
---

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8 text-gray-800"><%= current_page.data.title %></h1>

  <div class="space-y-4">
    <% ordered_pages("blog/*.html.md").each do |post| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
        <%= link_to post.data.title, post.url, class: "text-2xl font-bold text-gray-800 hover:text-blue-600" %>
        <% if post.data.description %>
          <p class="text-gray-600 mt-2"><%= post.data.description %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>